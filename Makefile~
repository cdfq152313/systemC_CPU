LIB_DIR=-L/usr/local/systemc-2.3.0/lib-linux
INC_DIR=-I/usr/local/systemc-2.3.0/include
LIB=-lsystemc-2.3.0
RPATH=-Wl,-rpath=/usr/local/systemc-2.3.0/lib-linux
CFLAG =-D ALU_DEBUG

APP=alu
BPP=main

all:
	g++ -o $(APP) $(APP).cpp $(BPP).cpp $(LIB_DIR) $(INC_DIR) $(LIB) $(RPATH) $(CFLAG)

clean:
	rm -rf $(APP)
